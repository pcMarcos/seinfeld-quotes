


<div class="max-w-sm rounded overflow-hidden shadow-lg">
  <img class="w-full" src="https://www.magazine-hd.com/apps/wp/wp-content/uploads/2021/03/seinfeld-s01-s02-nosplay.jpg" alt="Sunset in the mountains">
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2"> Seinfeld quotes generator </div>
    <p class="text-gray-700 text-base">
      <%= @quote %>
    </p>
  </div>
  <div class="px-6 pt-4 pb-2">
    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
      <%= link_to "Refresh", quotes_path %>
    </button>
  </div>
</div>